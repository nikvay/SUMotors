<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginEnd="@dimen/margin_20"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:contentPadding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_10"
                    android:paddingTop="@dimen/padding_30"
                    android:paddingEnd="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_20"
                    android:text="Are you sure you want to app logout ?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_17" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_not_now"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="@color/app_btn_color"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/app_btn_txt_color"
                        android:textSize="@dimen/txt_size_17" />

                    <Button
                        android:id="@+id/btn_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:background="@color/app_btn_color"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:textColor="@color/app_btn_txt_color"
                        android:textSize="17sp" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_circle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_profile_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/app_log_out"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>